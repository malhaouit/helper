{
  "builds": [
    {
      "src": "frontend/package.json",  // Path to your frontend project
      "use": "@vercel/static-build",  // Use the static build target
      "config": {
        "distDir": "dist"  // Ensure the dist directory is used for output
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",  // Catch all routes
      "dest": "/index.html"  // Route all requests to index.html (for client-side routing)
    }
  ]
}
